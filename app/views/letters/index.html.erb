<%= form_for :letter, url: letters_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/>
  <%= f.label :email %>
  <%= f.text_field :email %><br/>
  <%= f.label :phone %>
  <%= f.text_field :phone %><br/>
  <%= f.label :body %>
  <%= f.text_area :body %><br/>
  <%= f.submit "Send" %>
<% end %>
