<%= link_to 'New', new_post_path , class: "btn btn-default"%><br/>
<% @articles.each do |a| %>
  <%= link_to a.article, post_path(a.id) %>
  <%= a.article %>
  <%= sanitize(a.body) %>
  <%= link_to 'Edit', edit_post_path(a.id) %>
  <%= link_to 'Delete', post_path(a.id), method: :delete %><br/>
<% end %>
