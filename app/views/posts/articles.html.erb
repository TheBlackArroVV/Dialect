<h2 align="center">Cтатті</h2>
<%= link_to 'Додати статтю', new_post_path , class: "btn btn-default" if user_signed_in?%><br/>
<div class="articles">
<% @articles.each do |a| %>
 <div class="article col-sm-12 col-xs-12">
    <div class="img">
      <%= image_tag a.mainphoto.url , class: 'img-responsive' %>
    </div>
    <div class="title">
      <h5><%= a.category.name %></h5>
      <hr class="blog-hr">
      <h3 class=""><%= link_to a.article, post_path(a.id) %></h3>
      <%= truncate sanitize(a.body), length: 100, escape: false %>
    <% if user_signed_in && a.user_id.to_i.equal?(current_user.id) %>
      <div class="article-control-links">
        <hr align="right" width="25%">
        <%= link_to 'Редагувати', edit_post_path(a.id) %>
        <%= link_to 'Видалити', post_path(a.id), method: :delete %>
       </div>
    <% end %>
  </div>

  </div>
<% end %>
</div>
