<section>


  <div class="row about-us-homepage">
    <div class="col-sm-6 col-xs-12 about-us-img">
    </div>
    <div class="col-sm-6 col-xs-12 about-us-content">
      <h4>Про нас</h4>
      <hr class="blog-hr">
