    </div>
  </div>
  <h2 align="center">Останні новини</h2>

  <div class="row article-row">
    <% @news.each do |n| %>
      <div class="article col-sm-4 col-xs-12">
        <div class="img">
          <%= image_tag n.mainphoto.url, class: 'thumb img-responsive' %>
        </div>
        <div class="title">
          <h5><%= n.category.name %></h5>
          <hr class="blog-hr">
          <h3 class=""><%= link_to n.article, post_path(n.id) %></h3>
        </div>
      </div>
    <% end %>
  </div>

  <h2 align="center">Останні записи</h2>

  <div class="row article-row">
    <% @articles.each do |a| %>
    <div class="article col-sm-4 col-xs-12">
      <div class="img">
        <%= image_tag a.mainphoto.url, class: 'thumb img-responsive' %>
      </div>
      <div class="title">
        <h5><%= a.category.name %></h5>
        <hr class="blog-hr">
        <h3 class=""><%= link_to a.article, post_path(a.id) %></h3>
      </div>
    </div>
    <% end %>
  </div>


