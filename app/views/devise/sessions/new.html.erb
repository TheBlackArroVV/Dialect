<div class="login-screen">
  <h2 align="center">Ввійти</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <label>Пошта<span class="red-star">*</span>:</label>
      <%= f.email_field :email , class: "form-control " , autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <label>Пароль<span class="red-star">*</span>:</label>
      <%= f.password_field :password, class: "form-control ", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
            <label>Запам'ятати мене</label>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Ввійти", class: "btn btn-default" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
