<div class="login-screen">
  <h2 align="center">Реєстрація</h2>

  <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <label>Ім'я'<span class="red-star">*</span>:</label>
      <%= f.text_field :name, class: "form-control", autofocus: true %>
    </div>

    <div class="field">
      <label>Призвіща<span class="red-star">*</span>:</label>
      <%= f.text_field :surname, class: "form-control"  %>
    </div>

    <div class="field">
      <label>Пошта<span class="red-star">*</span>:</label>
      <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
    </div>

    <div class="field">
      <label>Пароль (не менше 6-ти символів)<span class="red-star">*</span>:</label>
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>

    <div class="field">
      <label>Підтвердження паролю<span class="red-star">*</span>:</label>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Зарєструватись", class: "btn btn-default" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
