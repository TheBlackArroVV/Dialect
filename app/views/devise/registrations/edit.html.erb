<div class="edit-profile">
<h2>Редагування профілю</h2>

<%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>



  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Ми все ще чекаємо підтвердження пошти: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="main-info">
    <h3>Основна інформація:</h3>

    <label>Ім'я:'</label>
    <%= f.text_field :name,  class: "form-control", autocomplete: "on" %>

    <label>Призвіще:</label>
    <%= f.password_field :surname,  class: "form-control", autocomplete: "on" %>

    <label>Дата народження:</label>
    <%= f.password_field :password,  class: "form-control", autocomplete: "on" %>

    <label>Місто:</label>
    <%= f.password_field :password,  class: "form-control", autocomplete: "on" %>

    <label>Країна:</label>
    <%= f.password_field :password,  class: "form-control", autocomplete: "on" %>

  </div>

  <div class="field">
    <h3>Зміна паролю</h3>
    <label>Новий пароль: </label> <i>(Залиште поле порожнім, якщо не хочете змінити пароль)</i>
    <%= f.password_field :password,  class: "form-control", autocomplete: "off" %>

  </div>

  <div class="field">
    <label>Підтвердження нового паролю: </label>:
    <%= f.password_field :password_confirmation,  class: "form-control", autocomplete: "off" %>
  </div>

  <div class="field">
      <label>Старий пароль: </label> <i>(для підтвердження нового паролю, введіть старий)</i>
    <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Оновити профіль", class: 'btn btn-default' %>
  </div>
<% end %>



<%= link_to "Повернутись назад", :back %>

</div>
